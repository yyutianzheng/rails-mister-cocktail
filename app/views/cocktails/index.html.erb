<div class="container" >
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
          <%= link_to "Detail", cocktail_path(cocktail), class: "card-link" %>
      </div>
    <% end %>
  </div>
</div>
